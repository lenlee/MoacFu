<view class='topTabSwiper'>
  <view class='tab  {{currentData == 0 ? "tabBorer" : ""}}' data-current="0" bindtap='checkCurrent'>拼手气红包</view>
  <view class='tab  {{currentData == 1 ? "tabBorer" : ""}}' data-current="1" bindtap='checkCurrent'>普通红包</view>
</view>
<swiper current="{{currentData}}" class='swiper' style="height:600px;" duration="300" bindchange="bindchange">
  <swiper-item>
    <view class='swiper_con'>
      <view class="section">

        <view class="weui-cells_after-title">
          <view class="weui-cell weui-cell-bottom">
            <view class="weui-cell__hd">
              <view class="weui-label">
                <text>总金额：</text>
              </view>
            </view>
            <view class="weui-cell__bd">
              <input class="weui-input" name="input" placeholder="输入金额" placeholder-class="placeholder" />
            </view>
          </view>

          <view class="weui-cell">
            <view class="weui-cell__hd">
              <view class="weui-label">
                <text>福包个数：</text>
              </view>
            </view>
            <view class="weui-cell__bd">
              <input class="weui-input" name="input" placeholder="输入数量" placeholder-class="placeholder" />
            </view>
          </view>
        </view>


        <input class="weui-input weui-input-words" name="input" placeholder="恭喜发财" placeholder-class="placeholder" />

        <button class="weui-btn" type="warn">发送</button>
      </view>
    </view>
  </swiper-item>
  <swiper-item>
    <view class='swiper_con' >
      <view class="section">

        <view class="weui-cells_after-title">
          <view class="weui-cell weui-cell-bottom">
            <view class="weui-cell__hd">
              <view class="weui-label">
                <text>单个金额：</text>
              </view>
            </view>
            <view class="weui-cell__bd">
              <input class="weui-input" name="input" placeholder="输入金额" placeholder-class="placeholder" />
            </view>
          </view>
        </view>

        <view class="weui-cells_after-title">
          <view class="weui-cell">
            <view class="weui-cell__hd">
              <view class="weui-label">
                <text>福包个数：</text>
              </view>
            </view>
            <view class="weui-cell__bd">
              <input class="weui-input" name="input" placeholder="输入数量" placeholder-class="placeholder" />
            </view>
          </view>
        </view>


        <input class="weui-input weui-input-words" name="input" placeholder="恭喜发财" placeholder-class="placeholder" />

        <button class="weui-btn" type="warn">发送</button>
      </view>
    </view>
  </swiper-item>
</swiper>